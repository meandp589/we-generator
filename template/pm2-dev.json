{
    "apps": [
        {
            "exec_mode": "fork",
            "instances": 1,
            "script": "index.js",
            "name": "template",
            "interpreter": "node",
            "watch": [
                "src",
                "views",
                "public",
                "conf",
                "index.js"
            ],
            "ignore_watch": [
                "node_modules",
                "logs",
                "src/utils/enum"
            ],
            "env": {
                "app_host": "0.0.0.0",
                "app_port": "3000",
                "use_https": false,
                "key": "ssl/server.key",
                "cert": "ssl/server.crt",
                "app": {
                    "whiteListReq": ["*"]
                },
                "services": {
                    "mongodb": {
                        "conn_type": "mongodb+srv",
                        "ip": "template.t9tsx.mongodb.net",
                        "port": "",
                        "path": "/template-db?retryWrites=true&w=majority",
                        "options": {
                            "user": "",
                            "pass": ""
                        }
                    }
                },
                "log": {
                    "console": true,
                    "useLog": "winston",
                    "appLog": {
                        "logName": "app.log",
                        "level": "debug",
                        "interval": "1d",
                        "size": "10m"
                    },
                    "winston": {
                        "logName": "access.log",
                        "interval": "1d",
                        "size": "10m"
                    }
                }
            }
        }
    ]
}